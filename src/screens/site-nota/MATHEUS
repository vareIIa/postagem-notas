useEffect(() => {
        const fetchCities = async () => {
            if (!estado) return;
    
            try {
                const config = {
                    headers: {
                      "Api-Key": import.meta.env.VITE_API_KEY,
                    },
                  };
                const response = await axios.get('https://api-hml.pdcloud.dev/city/active', config);
                const citiesData = response.data;
                const activeCities = citiesData
                    .filter((city: { status: boolean; state: { nome: string; }; }) => city.status === true && city.state.nome === estado)
                    .map((city: { nome: string; id: string; }) => ({ nome: city.nome, id: city.id }));
                setCities(activeCities);
            } catch (error) {
                console.error('Error fetching cities:', error);
            }
        };
    
        fetchCities();
    }, [estado]);